---
const { post } = Astro.props;

const date = new Date(post.data.publishedAt);
const formatted = date.toLocaleDateString("en-US", {
	year: "numeric",
	month: "long",
	day: "numeric",
});
---

<article>
	<h5 class="heading-5 mb-2">
		<a href={`/posts/${post.data.slug}`}>{post.data.title}</a>
	</h5>
	<p class="text-16 italic">{formatted}</p>
</article>
