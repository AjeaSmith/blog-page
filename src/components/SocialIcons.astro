---
import Logo from "../assets/icons/logo.svg";
import Github from "../assets/icons/logo-github.svg";
import Linkedin from "../assets/icons/logo-linkedin.svg";
import Frontend from "../assets/icons/logo-frontend-mentor.svg";
import { cn } from "@/lib/utils";

const { className } = Astro.props;
---

<div class={cn("flex gap-3", className)}>
	<button
		type="button"
		aria-label="logo"
		class="size-10 cursor-pointer inline-flex items-center justify-center gap-2 hover:bg-(--border) shadow-none bg-(--header-background) transition-colors ease-in duration-500 rounded-lg border border-(--border) focus:outline-none focus:ring-2 focus:ring-blue-500"
	>
		<Logo class="fill-(--icon-fill)" />
	</button>
	<button
		type="button"
		aria-label="github"
		class="size-10 cursor-pointer inline-flex items-center justify-center gap-2 hover:bg-(--border) shadow-none bg-(--header-background) transition-colors ease-in duration-500 rounded-lg border border-(--border) focus:outline-none focus:ring-2 focus:ring-blue-500"
	>
		<Github class="fill-(--icon-fill) focus:outline-blue-500" />
	</button>

	<button
		type="button"
		aria-label="linkedin"
		class="size-10 cursor-pointer inline-flex items-center justify-center gap-2 hover:bg-(--border) shadow-none bg-(--header-background) transition-colors ease-in duration-500 rounded-lg border border-(--border) focus:outline-none focus:ring-2 focus:ring-blue-500"
	>
		<Linkedin class="fill-(--icon-fill) focus:outline-blue-500" />
	</button>

	<button
		type="button"
		aria-label="frontendmentor"
		class="size-10 cursor-pointer inline-flex items-center justify-center gap-2 hover:bg-(--border) shadow-none bg-(--header-background) transition-colors ease-in duration-500 rounded-lg border border-(--border) focus:outline-none focus:ring-2 focus:ring-blue-500"
	>
		<Frontend
			class="fill-(--icon-fill) focus:outline-none focus:ring-2 focus:ring-blue-500"
		/>
	</button>
</div>
