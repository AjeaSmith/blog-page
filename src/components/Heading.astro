---
const sizes = {
	h1: "h1",
	h2: "h2",
	h3: "h3",
	h4: "h4",
	h5: "h5",
	h6: "h6",
};

const { tag, size, ...rest } = Astro.props;
const CustomTag = tag;
---

<CustomTag class:list={["default", sizes[size]]} {...rest}>
	<slot />
</CustomTag>

<style>
	.h1 {
		font-size: var(--text-2xl);
		font-weight: 800;
		letter-spacing: -1px;
	}
	.h2 {
		font-size: var(--text-xl);
		font-weight: 800;
		margin-bottom: 0;
		letter-spacing: -0.5px;
	}
	.h3 {
		font-size: var(--text-lg);
		font-weight: 700;
	}
	.h4 {
		font-size: var(--text-md);
		font-weight: 600;
	}
	.h5 {
		font-size: var(--text-sm);
		font-weight: 600;
		margin-bottom: 0;
	}
	.h6 {
		font-size: var(--text-xs);
		font-weight: 500;
		margin-bottom: 0;
	}
</style>
